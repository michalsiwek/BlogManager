@model BlogManager.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<br />
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <section>
            @using (Html.BeginForm("ForgotPasswordActions", "Account", FormMethod.Get, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">Possible actions</h4>
                <hr />
                <div class="form-group row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-sm-4 col-xs-4 control-label text-right" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "col-md-6 col-sm-6 col-xs-6 form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" name="remind" class="btn btn-default" value="Remind via email" />
                        <input type="submit" name="reset" class="btn btn-primary" value="Reset password" />
                    </div>
                </div>
            }
            <form class="text-center form-horizontal"></form>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}