@using BlogManager.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<br />
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">Use your email address to log in.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-center" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    @Html.LabelFor(m => m.RememberMe, new { @class = "col-md-6 col-sm-6 col-xs-6 control-label text-right" })
                    <span class="col-md-6 col-sm-6 col-xs-6" style="margin-top: 10px;">
                        <label class="switch">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <div class="slider round"></div>
                        </label>
                    </span>
                </div>
                <hr />
                <div class="form-group">
                    <div class="text-center">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
                <div id="register-link">
                    <p>
                        @Html.ActionLink("Forgot password?", "ForgotPassword")
                    </p>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}