@model BlogManager.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<br/>
<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <section>
            @using (Html.BeginForm("PassReset", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="text-center">Answer the question and type new password</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-center" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <p class="form-control-static">@Html.ValueFor(m => m.Email)</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RecoveryQuestion, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <p class="form-control-static">@Html.ValueFor(m => m.RecoveryQuestion)</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Answer, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(m => m.Email)
                @Html.HiddenFor(m => m.RecoveryQuestion)
                <hr />
                <div class="form-group">
                    <div class="text-center">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save changes</button>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
