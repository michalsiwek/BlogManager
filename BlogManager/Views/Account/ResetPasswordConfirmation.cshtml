@{
    ViewBag.Title = "Reset password confirmation";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<br/>
<br/>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="text-center">
            <h3>
                Your password has been reset.
            </h3>
            <br/>
            <p>
                Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
    </div>
</div>
