@using BlogManager.Models
@model ResetPasswordViewModel

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-center">Reset password.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-center" })
    <div class="form-group">
        @Html.LabelFor(m => m.RecoveryQuestion, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
        <div class="col-xs-6 col-sm-6 col-md-6">
            @Html.ValueFor(m => m.RecoveryQuestion)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Answer, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
        <div class="col-xs-6 col-sm-6 col-md-6">
            @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
        <div class="col-xs-6 col-sm-6 col-md-6">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-5 col-sm-5 col-md-5 control-label" })
        <div class="col-xs-6 col-sm-6 col-md-6">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="modal-footer" style="margin-top: 20px;">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save changes</button>
    </div>
}
