@model BlogManager.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<br />
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <section>
            @Html.AntiForgeryToken()
            <form>
                <h4 class="text-center">Account data.</h4>
                <hr />
                <div class="form-group row">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-6 col-sm-6 col-xs-6 control-label text-right" })
                    <span class="col-md-6 col-sm-6 col-xs-6">
                        @Html.ValueFor(m => m.Email)
                    </span>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Nickname, new { @class = "col-md-6 col-sm-6 col-xs-6 control-label text-right" })
                    <span class="col-md-6 col-sm-6 col-xs-6">
                        @Html.ValueFor(m => m.Nickname)
                    </span>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-6 col-sm-6 col-xs-6 control-label text-right" })
                    <span class="col-md-6 col-sm-6 col-xs-6">
                        @Html.ValueFor(m => m.FirstName)
                    </span>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-6 col-sm-6 col-xs-6 control-label text-right" })
                    <span class="col-md-6 col-sm-6 col-xs-6">
                        @Html.ValueFor(m => m.LastName)
                    </span>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.AccountTypeName, new { @class = "col-md-6 col-sm-6 col-xs-6 control-label text-right" })
                    <span class="col-md-6 col-sm-6 col-xs-6">
                        @Html.ValueFor(m => m.AccountTypeName)
                    </span>
                </div>
                <hr />
                <div class="form-group">
                    <div class="text-center">
                        <input type="button" class="btn btn-default" value="Back" />
                        <input type="button" class="btn btn-primary" value="Edit Data" />
                        <input type="button" class="btn btn-warning" value="Change Password" />
                    </div>
                </div>
            </form>
            
        </section>
    </div>
</div>